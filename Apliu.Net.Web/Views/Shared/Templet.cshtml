<header id="search">
    <div class="dd-logo">
        <a href="/" style="background-size: 2rem 2rem;"></a>
    </div>
    <div class="search_box">
        <div class="search">
            <form id="index_search_form" method="get" action="/shared/error" target="_parent" onsubmit="return submit_search();">
                <div class="text_box">
                    <input id="keyword" name="keyword" type="text" placeholder="请输入搜索内容" class="keyword text" autocomplete="off">
                </div>
                <input type="submit" value="" class="submit">
                <input type="hidden" value="index_search_form_submit" id="sid" name="sid">
            </form>
        </div>
    </div>
    <div class="header-category"><a href="~/earliest/listnavi/index.html"><em>更多</em></a></div>
    <div class="search_list"></div>
</header>
<div style="background-color: white; min-height: 450px; -ms-word-wrap: break-word; word-wrap: break-word; -ms-word-break: break-all; word-break: break-all;">
    @RenderBody()
</div>
<div class="fixed_box" style="-webkit-transform-origin: 0px 0px; opacity: 1; -webkit-transform: scale(1, 1); display: none;">
    <a href="javascript:scrollTo(0,0)" class="btn_back" id="backtop">
        <img style="width: 2rem" src="~/img/appimg/go-top.png"></a>
</div>

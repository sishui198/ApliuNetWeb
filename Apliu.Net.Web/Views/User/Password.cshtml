@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "忘记密码";
}
<link rel="stylesheet" href="~/css/style/appcss/common.css">
<link rel="stylesheet" href="~/css/style/appcss/app.css">
<link rel="stylesheet" href="~/css/style/user/login.css">

<div class="register">
    <div class="regTop">
        <span>忘记密码</span>
        <a class="back" href="login">&lt;&nbsp;返回</a>
    </div>
    <div class="content">
        <div class="point">
            <a href="/">
                <img src="~/img/logo/logorect.png" alt="" />
            </a>
        </div>
        <form action="javascript:void(0);">
            <div class="message">
                <input type="tel" name="username" id="username" placeholder="输入手机号" maxlength="11" />
                <input type="text" name="smscode" id="smscode" placeholder="输入短信验证码" maxlength="6" />
                <input type="password" name="password" id="password" placeholder="请输入3-18位密码" maxlength="18" />
                <input type="password" name="passwordag" id="passwordag" placeholder="请再次输入密码" maxlength="18" />
                <div class="icons">
                    <b>
                        <img src="~/img/icon/zc-1.jpg" alt="" />
                    </b>
                    <b>
                        <img src="~/img/icon/zc-2.jpg" alt="" />
                    </b>
                    <b>
                        <img src="~/img/icon/zc-3.jpg" alt="" />
                    </b>
                    <b>
                        <img src="~/img/icon/zc-3.jpg" alt="" />
                    </b>
                </div>
                <a class="codechange" href="javascript:void(0);" id="getsmscode" codetype="3">获取验证码</a>
            </div>
            <div class="agree">
                <span>&nbsp;通过短信验证码找回密码&nbsp;</span>
            </div>
            <button class="submit" type="submit" id="btn-changepassword">确认修改</button>
        </form>
    </div>
</div>
<script src="~/js/script/user/login.js"></script>
<script src="~/js/script/user/smscode.js"></script>

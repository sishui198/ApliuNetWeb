@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "登录";
}
<link rel="stylesheet" href="~/css/style/appcss/common.css">
<link rel="stylesheet" href="~/css/style/appcss/app.css">
<link rel="stylesheet" href="~/css/style/user/login.css">

<script src="~/js/script/user/login.js"></script>
<div class="login_bg">
    <div id="logo">
        <a href="/">
            <img src="~/img/logo/logorect.png" alt="" />
        </a>
    </div>
    <form action="javascript:void(0);">
        <div class="userName">
            <span>用户名：</span>
            <input type="text" name="username" id="username" placeholder="请输入用户名" maxlength="11" />
        </div>
        <div class="passWord">
            <span>密&nbsp;&nbsp;&nbsp;码：</span>
            <input type="password" name="password" id="password" placeholder="请输入密码" maxlength="18" />
        </div>
        <div class="choose_box">
            <div>
                <input type="checkbox" checked="checked" name="checkbox" />
                <span>记住密码</span>
            </div>
            <a href="password">忘记密码</a>
        </div>
        <button class="login_btn" type="submit" id="btn-login">登&nbsp;&nbsp;录</button>
    </form>
    <a href="register">注册新用户</a>
    <div class="other_login">
        <div class="other"></div>
        <span>其他方式登录</span>
        <div class="other"></div>
    </div>
    <div class="other_choose">
        <a href="JavaScript:void(0)">
            <img src="~/img/icon/qq.png" alt="" />
        </a>
        <a href="JavaScript:void(0)">
            <img src="~/img/icon/wx.png" alt="" />
        </a>
        <a href="JavaScript:void(0)">
            <img src="~/img/icon/wb.png" alt="" />
        </a>
    </div>
</div>
